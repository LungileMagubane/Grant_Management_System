@model IEnumerable<Grant_Management_System.Models.Grant>

@{
    ViewData["Title"] = "Grants";
}
<style>
    
    .table-custom {
        margin: 20px; 
        padding: 10px; 
    }

    #GrantTable th, #GrantTable td {
